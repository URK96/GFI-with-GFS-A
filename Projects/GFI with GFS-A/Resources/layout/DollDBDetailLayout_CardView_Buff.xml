<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:visibility="gone"
    android:id="@+id/bDollDBDetailBuffCardLayout"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="5dp"
    cardview:cardBackgroundColor="@color/background_material_dark">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bDollDBDetailBuffLayout">
    <!--Doll Buff Part - Doll Buff Image-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/bDollDBDetailBuffImageLayout">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff1" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff2" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff3" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff4" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff5" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff6" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff7" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff8" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/bDollDBDetailBuff9" />
            </LinearLayout>
        </LinearLayout>
    <!--Doll Buff Part - Doll Buff Detail-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/bDollDBDetailBuffImageLayout"
            android:id="@+id/bDollDBDetailBuffDetailLayout">
        <!--Doll Buff Part - Doll Buff Detail - Buff Icon & Detail-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bDollDBDetailBuffLayout1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bDollDBDetailBuffIcon1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/bDollDBDetailBuffName1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/bDollDBDetailBuffDetail1" />
            </LinearLayout>
            <LinearLayout
				android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/bDollDBDetailBuffLayout2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bDollDBDetailBuffIcon2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/bDollDBDetailBuffName2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/bDollDBDetailBuffIcon2"
                    android:id="@+id/bDollDBDetailBuffDetail2" />
            </LinearLayout>
        </LinearLayout>
    <!--Doll Buff Part - Buff Type-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_below="@id/bDollDBDetailBuffImageLayout"
            android:id="@+id/bDollDBDetailEffectType" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</merge>
