
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bDollDBDetailMainRefreshLayout">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bDollDBDetailMainLayout">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:id="@+id/bDollDBDetailBackgroundImageView" />
        <!--Doll Title Layout-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bDollDBDetailBasicLayout">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/bDollDBDetailSmallImageLayout">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/bDollDBDetailSmallImage" />
            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toRightOf="@id/bDollDBDetailSmallImageLayout"
                android:gravity="center"
                android:id="@+id/bDollDBDetailBasicInfoLayout">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/bDollDBDetailDollDicNumber" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/bDollDBDetailDollName" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:id="@+id/bDollDBDetailDollProductTime" />
            </LinearLayout>
			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/bDollDBDetailSmallImageLayout"
				android:gravity="center"
				android:id="@+id/bDollDBDetailDollProductDialog"/>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/bDollDBDetailDollProductDialog"
				android:layout_margin="10dp"
				android:visibility="gone"
				android:id="@+id/bDollDBExtraFeatureLayout">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:id="@+id/bDollDBDetailVoiceLayout">
				    <Spinner
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center"
					    android:id="@+id/bDollDBDetailVoiceCostumeSelector"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:id="@+id/bDollDBDetailVoiceSelector" />
                        <Button
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/Common_Play"
                            android:id="@+id/bDollDBDetailVoicePlayButton" />
                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressTint="@color/ProgressBarColor"
                        android:visibility="invisible"
                        android:id="@+id/bDollDBDetailVoiceDownloadProgress" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/bDollDBDetailVoiceLayout"
                    android:visibility="gone"
                    android:id="@+id/bDollDBDetailModSelectLayout">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mod_0"
                            android:id="@+id/bDollDBDetailModSelect0" />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mod_1"
                            android:id="@+id/bDollDBDetailModSelect1" />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mod_2"
                            android:id="@+id/bDollDBDetailModSelect2" />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:src="@drawable/mod_3"
                            android:id="@+id/bDollDBDetailModSelect3" />
                    </LinearLayout>
                </LinearLayout>
			    <LinearLayout
				    android:orientation="horizontal"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/bDollDBDetailModSelectLayout"
				    android:visibility="gone"
				    android:id="@+id/bDollDBDetailExtraButtonLayout">
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:layout_marginLeft="5dp"
				        android:layout_marginRight="5dp"
				        android:visibility="gone"
                        android:text="@string/DollDBDetailLayout_ModStory"
                        android:id="@+id/bDollDBDetailModStoryButton" />
			        <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
				        android:layout_weight="1"
				        android:layout_marginLeft="5dp"
				        android:layout_marginRight="5dp"
                        android:text="@string/DollDBDetailLayout_ModelData"
                        android:id="@+id/bDollDBDetailModelDataButton"/>
			    </LinearLayout>
		    </LinearLayout>
            <ImageButton
			    android:layout_width="match_parent"
			    android:layout_height="50dp"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ArrowDown"
                android:scaleType="fitCenter"
			    android:layout_below="@id/bDollDBExtraFeatureLayout"
			    android:id="@+id/bDollDBExtraFeatureButton"/>
        </RelativeLayout>
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bDollDBDetailSnackbarLayout"
            android:layout_alignTop="@id/bDollDBDetailMainLayout" />
    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>