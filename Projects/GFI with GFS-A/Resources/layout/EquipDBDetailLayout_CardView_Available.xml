<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:visibility="gone"
    android:id="@+id/EquipDBDetailAvailableInfoCardLayout"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="5dp"
    cardview:cardBackgroundColor="@color/background_material_dark">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EquipDBDetailAvailableInfoLayout">
    <!--Equip Available Info - Recommend Part-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EquipDBDetailAvailableInfoRecommendLayout"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EquipDBDetailLayout_RecommendGunTypeText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/EquipDBDetailAvailableInfoRecommend"
                android:gravity="center" />
        </LinearLayout>
    <!--Equip Available Info - Use Part-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EquipDBDetailAvailableInfoUseLayout"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EquipDBDetailLayout_AvailableGunTypeText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/EquipDBDetailAvailableInfoUse"
                android:gravity="center" />
        </LinearLayout>
    <!--Equip Available Info - Only Use Part-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EquipDBDetailAvailableInfoOnlyUseLayout"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/EquipDBDetailLayout_OnlyUseText"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/EquipDBDetailAvailableInfoOnlyUse"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
</merge>
