<androidx.preference.PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_App">
    <androidx.preference.Preference
      android:key="UpdateLog"
      android:title="@string/Setting_UpdateLog_Title"
      android:summary="@string/Setting_UpdateLog_Summary"/>
    <androidx.preference.ListPreference
      android:key="StartAppMode"
      android:title="@string/Setting_StartAppMode_Title"
      android:summary="@string/Setting_StartAppMode_Summary"/>
    <!--<androidx.preference.SwitchPreference
      android:key="LowMemoryOption"
      android:title="@string/Setting_LowMemoryOption_Title"
      android:summary="@string/Setting_LowMemoryOption_Summary"/>-->
    <androidx.preference.SwitchPreference
      android:key="UseLightTheme"
      android:title="@string/Setting_UseLightTheme_Title"
      android:summary="@string/Setting_UseLightTheme_Summary"/>
    <androidx.preference.SwitchPreference
      android:key="EnableServerCheck"
      android:title="@string/Setting_ServerCheck_Title"
      android:summary="@string/Setting_ServerCheck_Summary"/>
    <androidx.preference.ListPreference
      android:key="AppLanguage"
      android:title="@string/Setting_AppLanguage_Title"
      android:summary="@string/Setting_AppLanguage_Summary"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_MainMenu">
    <androidx.preference.ListPreference
      android:key="StartMainFragment"
      android:title="@string/Setting_StartMainFragment_Title"
      android:summary="@string/Setting_StartMainFragment_Summary"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_DB">
    <androidx.preference.SwitchPreference
      android:key="AutoDBUpdate"
      android:title="@string/Setting_AutoDBUpdate_Title"
      android:summary="@string/Setting_AutoDBUpdate_Summary"/>
    <androidx.preference.Preference
      android:key="CheckDBUpdate"
      android:title="@string/Setting_CheckDBUpdate_Title"
      android:summary="@string/Setting_CheckDBUpdate_Summary"/>
    <androidx.preference.Preference
      android:key="RepairDB"
      android:title="@string/Setting_RepairDB_Title"
      android:summary="@string/Setting_RepairDB_Summary"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_DBList">
    <androidx.preference.SwitchPreference
       android:key="DBListImageShow"
       android:title="@string/Setting_DBListImageShow_Title"
       android:summary="@string/Setting_DBListImageShow_Summary"
       android:defaultValue="false" />
    <!--<androidx.preference.SwitchPreference
       android:key="PreviewDBListLayout"
       android:title="@string/Setting_PreviewDBListLayout_Title"
       android:summary="@string/Setting_PreviewDBListLayout_Summary"
       android:defaultValue="false" />-->
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_DBDetail">
    <androidx.preference.SwitchPreference
      android:key="DBDetailBackgroundImage"
      android:title="@string/Setting_DBDetailBackgroundImage_Title"
      android:summary="@string/Setting_DBDetailBackgroundImage_Summary"
      android:defaultValue="true"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_TextViewer">
    <androidx.preference.Preference
      android:key="TextViewerTextSize"
      android:title="@string/Setting_TextSize_Title"
      android:summary="@string/Setting_TextSize_Summary"
      android:defaultValue="12"/>
    <androidx.preference.Preference
      android:key="TextViewerTextColor"
      android:title="@string/Setting_TextColor_Title"
      android:summary="@string/Setting_TextColor_Summary"
      android:defaultValue="0"/>
    <androidx.preference.Preference
      android:key="TextViewerBackgroundColor"
      android:title="@string/Setting_BackgroundColor_Title"
      android:summary="@string/Setting_BackgroundColor_Summary"
      android:defaultValue="0"/>
  </androidx.preference.PreferenceCategory>

  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_Cache">
    <!--<androidx.preference.Preference
      android:key="DownloadAllCache"
      android:title="@string/Setting_DownloadAllCache_Title"
      android:summary="@string/Setting_DownloadAllCache_Summary"/>-->
    <androidx.preference.Preference
      android:key="CleanCache"
      android:title="@string/Setting_CleanCache_Title"
      android:summary="@string/Setting_CleanCache_Summary"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_Log">
    <!--<Preference
      android:key="OpenLogFolder"
      android:title="로그 폴더 열기"
      android:summary="로그 파일이 저장된 폴더를 볼 수 있도록 파일탐색기를 실행합니다."/>-->
    <androidx.preference.Preference
      android:key="DeleteAllLogFile"
      android:title="@string/Setting_DeleteAllLogFile_Title"
      android:summary="@string/Setting_DeleteAllLogFile_Summary"/>
  </androidx.preference.PreferenceCategory>
  
  <androidx.preference.PreferenceCategory
    android:title="@string/Setting_Category_ETC">
    <androidx.preference.Preference
      android:key="ExternalLibraryLicense"
      android:title="@string/Setting_ExternalLibraryLicense_Title"
      android:summary="@string/Setting_ExternalLibraryLicense_Summary"/>
    <androidx.preference.Preference
      android:key="GFDSourceCode"
      android:title="@string/Setting_GFDSourceCode_Title"
      android:summary="@string/Setting_GFDSourceCode_Summary"/>
  </androidx.preference.PreferenceCategory>
  
</androidx.preference.PreferenceScreen>