<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/CoalitionDBDetailMainRefreshLayout">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:background="@color/MainColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/CoalitionDBDetailMainToolbar">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/CoalitionDBDetailToolbarDicNumber"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:id="@+id/CoalitionDBDetailToolbarName"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:id="@+id/CoalitionDBDetailBackgroundImageView" />
            <!--Coalition Title Layout-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CoalitionDBDetailBasicLayout">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/CoalitionDBDetailSmallImage" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@id/CoalitionDBDetailSmallImage"
                    android:gravity="center"
                    android:id="@+id/CoalitionDBDetailBasicInfoLayout">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/CoalitionDBDetailCoalitionDicNumber" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/CoalitionDBDetailCoalitionName" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:id="@+id/CoalitionDBDetailCoalitionType" />
                </LinearLayout>
			    <TextView
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
				    android:layout_below="@id/CoalitionDBDetailSmallImage"
				    android:gravity="center"
				    android:id="@+id/CoalitionDBDetailCoalitionProductDialog"/>
			    <LinearLayout
				    android:orientation="vertical"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_below="@id/CoalitionDBDetailCoalitionProductDialog"
				    android:layout_margin="10dp"
				    android:visibility="gone"
				    android:id="@+id/CoalitionDBExtraFeatureLayout">
                    <!--<LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        android:id="@+id/CoalitionDBDetailVoiceLayout">
				        <Spinner
					        android:layout_width="match_parent"
					        android:layout_height="wrap_content"
					        android:gravity="center"
					        android:id="@+id/CoalitionDBDetailVoiceCostumeSelector"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:id="@+id/CoalitionDBDetailVoiceSelector" />
                            <Button
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/Common_Play"
                                android:id="@+id/CoalitionDBDetailVoicePlayButton" />
                        </LinearLayout>
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:progressTint="@color/ProgressBarColor"
                            android:visibility="invisible"
                            android:id="@+id/CoalitionDBDetailVoiceDownloadProgress" />
                    </LinearLayout>-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:visibility="visible"
                        android:id="@+id/CoalitionDBDetailModSelectLayout">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/analysis0"
                                android:id="@+id/CoalitionDBDetailAnalysisSelect0" />
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/analysis1"
                                android:id="@+id/CoalitionDBDetailAnalysisSelect1" />
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/analysis2"
                                android:id="@+id/CoalitionDBDetailAnalysisSelect2" />
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/analysis3"
                                android:id="@+id/CoalitionDBDetailAnalysisSelect3" />
                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:src="@drawable/analysis4"
                                android:id="@+id/CoalitionDBDetailAnalysisSelect4" />
                        </LinearLayout>
                    </LinearLayout>
			        <!--<LinearLayout
				        android:orientation="horizontal"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_below="@id/CoalitionDBDetailModSelectLayout"
				        android:visibility="gone"
				        android:id="@+id/CoalitionDBDetailExtraButtonLayout">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:layout_marginLeft="5dp"
				            android:layout_marginRight="5dp"
				            android:visibility="gone"
                            android:text="@string/CoalitionDBDetailLayout_ModStory"
                            android:id="@+id/CoalitionDBDetailModStoryButton" />
			            <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:layout_marginLeft="5dp"
				            android:layout_marginRight="5dp"
                            android:text="@string/CoalitionDBDetailLayout_ModelData"
                            android:id="@+id/CoalitionDBDetailModelDataButton"/>
			        </LinearLayout>-->
		        </LinearLayout>
                <ImageButton
			        android:layout_width="match_parent"
			        android:layout_height="50dp"
			        android:layout_marginLeft="10dp"
			        android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ArrowDown"
                    android:scaleType="fitCenter"
			        android:layout_below="@id/CoalitionDBExtraFeatureLayout"
			        android:id="@+id/CoalitionDBExtraFeatureButton"/>
            </RelativeLayout>
            <!--Scroll Part-->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/CoalitionDBDetailBasicLayout"
                android:id="@+id/CoalitionDBDetailScrollLayout">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/CoalitionDBDetailScrollMainLayout">
                    <!--<include layout="@layout/coalitiondbdetaillayout_cardview_ability"/>
                    <include layout="@layout/coalitiondbdetaillayout_cardview_abilitychart"/>-->
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CoalitionDBDetailSnackbarLayout"
                android:layout_alignTop="@id/CoalitionDBDetailMainToolbar" />
        </RelativeLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>