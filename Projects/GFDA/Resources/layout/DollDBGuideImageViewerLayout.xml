
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/MainColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/DollDBGuideImageViewerMainToolbar">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/DollDBGuideImageViewerToolbarDicNumber"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/DollDBGuideImageViewerToolbarTitle"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/DollDBGuideImageViewerMainToolbar"
        android:id="@+id/DollDBGuideImageViewerLoadingLayout">
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/DollDBGuideImageViewerLoadingIndicatorView"
            app:indicatorName="BallClipRotateMultipleIndicator"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@id/DollDBGuideImageViewerLoadingIndicatorView"
            android:id="@+id/DollDBGuideImageViewerLoadingIndicatorExplainText"/>
    </RelativeLayout>
    <com.github.chrisbanes.photoview.PhotoView
		android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/DollDBGuideImageViewerMainToolbar"
		android:isScrollContainer="true"
        android:clickable="true"
        android:id="@+id/DollDBGuideImageViewerImageView"/>
</RelativeLayout>