<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:visibility="gone"
    android:id="@+id/DollDBDetailBuffCardLayout"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="5dp"
    cardview:cardBackgroundColor="@color/background_material_dark">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DollDBDetailBuffLayout">
    <!--Doll Buff Part - Doll Buff Image-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/DollDBDetailBuffImageLayout">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff1" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff2" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff3" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff4" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff5" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff6" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff7" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff8" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/DollDBDetailBuff9" />
            </LinearLayout>
        </LinearLayout>
    <!--Doll Buff Part - Doll Buff Detail-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/DollDBDetailBuffImageLayout"
            android:id="@+id/DollDBDetailBuffDetailLayout">
        <!--Doll Buff Part - Doll Buff Detail - Buff Icon & Detail-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/DollDBDetailBuffLayout1">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/DollDBDetailBuffIcon1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/DollDBDetailBuffName1" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/DollDBDetailBuffDetail1" />
            </LinearLayout>
            <LinearLayout
				android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/DollDBDetailBuffLayout2">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/DollDBDetailBuffIcon2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:id="@+id/DollDBDetailBuffName2" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@id/DollDBDetailBuffIcon2"
                    android:id="@+id/DollDBDetailBuffDetail2" />
            </LinearLayout>
        </LinearLayout>
    <!--Doll Buff Part - Buff Type-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_below="@id/DollDBDetailBuffImageLayout"
            android:id="@+id/DollDBDetailEffectType" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</merge>
