<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:visibility="gone"
    android:id="@+id/CoalitionDBDetailBuffCardLayout"
    cardview:cardElevation="4dp"
    cardview:cardCornerRadius="5dp"
    cardview:cardBackgroundColor="@color/background_material_dark">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CoalitionDBDetailBuffLayout">
    <!--Coalition Buff Part - Coalition Buff Image-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/CoalitionDBDetailBuffImageLayout">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff1" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff2" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff3" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff4" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff5" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff6" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff7" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff8" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="1dp"
                    android:id="@+id/CoalitionDBDetailBuff9" />
            </LinearLayout>
        </LinearLayout>
    <!--Coalition Buff Part - Coalition Buff Detail-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toRightOf="@id/CoalitionDBDetailBuffImageLayout"
            android:id="@+id/CoalitionDBDetailBuffDetailLayout" />
    <!--Coalition Buff Part - Buff Type-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_below="@id/CoalitionDBDetailBuffImageLayout"
            android:id="@+id/CoalitionDBDetailEffectType" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</merge>
