<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/CalcSkillTrainingMainLayout">
      <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/CalcSkillTrainingType"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/Calc_SkillTraining_LevelSettingText"
            android:gravity="center"
            android:layout_marginTop="20dp" />
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">
      <Space
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />
      <NumberPicker
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          hideWheelUntilFocused="true"
          android:id="@+id/CalcSkillTrainingStartLevel" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:textAppearance="?android:attr/textAppearanceSmall"
          android:text="=&gt;"
          android:gravity="center"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp" />
      <NumberPicker
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          hideWheelUntilFocused="true"
          android:id="@+id/CalcSkillTrainingEndLevel" />
      <Space
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1" />
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Calc_SkillTraining_ResultChipCountText"
            android:gravity="center"
            android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Calc_SkillTraining_ResultChipCountDefaultText"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/CalcSkillTrainingResultSkillChip" />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/Calc_SkillTraining_ResultTimeCountText"
            android:gravity="center"
            android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/Calc_SkillTraining_ResultTimeCountDefaultText"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/CalcSkillTrainingResultTime" />
    </LinearLayout>
</ScrollView>